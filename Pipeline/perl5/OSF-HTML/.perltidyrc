--perl-best-practices          # "sane" defaults
--nostandard-output # We may not use -st (comming from -pbp) with more than one input file
--warning-output               # warnings become errors
# --ignore-old-breakpoints     #XXX no!
--maximum-line-length=132
#--maximum-consecutive-blank-lines=1  # default
--indent-columns=4
--continuation-indentation=4
--vertical-tightness=0
--vertical-tightness-closing=0
--paren-tightness=2            # high
#--brace-tightness==1          # medium (default)
--square-bracket-tightness=2   # high
--indent-spaced-block-comments # do not indent comments which start at pos 0
--nospace-for-semicolon        # ; in for()
--freeze-newlines              # no unfolding!
--nocuddled-else               # no "} else {"
#--nostandard-output           # no (default)
-utf8                          # both the input and output encoding
--backup-and-modify-in-place
-bext='/' # and delete the originals if there are no error.
#--noopening-brace-on-new-line # (default K&R)
--closing-token-indentation=0  # NO!!!!
--nospace-after-keyword="if elsif while for until"
#--nodelete-semicolons
--freeze-blank-lines
--nospace-function-paren
