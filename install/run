#!/bin/bash
#
# Start programs, mainly from cron.  The environment may not be
# loaded.

# Everything what is started via crontab should be wrapped in this
# script, like this:
#  * * * * * $RUN label command parameters


set -e

export MODULE="$1"
shift

COMMAND="$1"

source $HOME/etc/crawl-profile
source $PIPELINE_REPO/profile
source $PIPELINE_REPO/$MODULE/profile

if [ -t 0 ]
then : # Running from the command-line
else
    LOGDIR="$LOGS/$MODULE"
    [ -d "$LOGDIR" ] || mkdir $LOGDIR

    LOG="$LOGDIR/$(date +%F)-$COMMAND.log"
    exec >>$LOG 2>&1
fi

PATH="$PIPELINE_REPO/$MODULE/bin:$PATH"
log "Starting $MODULE: $@"

if "$@"      ### RUN!
then log "Ending $MODULE $COMMAND: success"
else log "Ending $MODULE $COMMAND: FAILED"

     # No flooding of emails to ops when something goes wrong
     MAILBLOCK="$LOCKS/$MODULE.$COMMAND.mail-lock"

     if [ ! -f "$MAILBLOCK" ]
     then touch "$MAILBLOCK"
          mail -t <<__WARNING
To: $MAILTO
Subject: crawl-pipeline fail $MODULE

Please have a look at $LOG to see what went wrong.
__WARNING
     fi
fi

